{
    "rules": [
        {
            "path": "users/{userId}/**",
            "allow": {
                "read": "auth.userId === userId",
                "write": "auth.userId === userId"
            }
        },
        {
            "path": "public/**",
            "allow": {
                "read": "true",
                "write": "auth !== null"
            }
        },
        {
            "path": "{collection}/{id}",
            "allow": {
                "read": "true",
                "write": "auth !== null"
            }
        }
    ]
}